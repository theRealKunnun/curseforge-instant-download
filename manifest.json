{
  "manifest_version": 3,
  "name": "Instant Download for CurseForge",
  "version": "1.0",
  "description": "Instantly downloads files from CurseForge. No more waiting for five seconds!",
  "host_permissions": [
    "https://*.curseforge.com/*"
  ],
  "permissions": [
    "declarativeNetRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.curseforge.com/*"
      ],
      "js": [
        "src/contentScript.js"
      ]
    }
  ],
  "background": {
    "service_worker": "src/serviceWorker.js"
  },
  "action": {
    "default_icon": {
      "16": "media/Icon.png",
      "24": "media/Icon.png",
      "32": "media/Icon.png",
      "48": "media/Icon.png",
      "128": "media/Icon.png"
    },
    "default_title": "IDFC",
    "default_popup": "src/ui.html"
  }
}