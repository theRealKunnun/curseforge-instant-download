{
  "manifest_version": 3,
  "name": "curseforge instant download",
  "version": "1.0",
  "description": "Instantly downloads files from curseforge, no more waiting.",
  "content_scripts": [{
      "matches": ["https://www.curseforge.com/*"],
      "js": ["src/contentScript.js"]}
  ],
  "background": {
    "service_worker": "src/serviceWorker.js"
  },
  "host_permissions": [
    "https://www.curseforge.com/*"
  ],
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "webNavigation",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "history",
    "downloads"
  ]
}