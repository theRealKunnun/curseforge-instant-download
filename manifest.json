{
  "manifest_version": 3,
  "name": "curseforge instant download",
  "version": "1.0",
  "description": "Instantly downloads files from curseforge, no more waiting.",
  "content_scripts": [{
      "matches": ["https://*.curseforge.com/*"],
      "js": ["src/contentScript.js"]}
  ],
  "background": {
    "service_worker": "src/serviceWorker.js"
  },
  "host_permissions": [
    "https://*.curseforge.com/*"
  ],
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "webNavigation",
    "declarativeNetRequestWithHostAccess",
    "history",
    "downloads"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": false,
        "path": "src/rules_1.json"},
      {
        "id": "ruleset_2",
        "enabled": false,
        "path": "src/rules_2.json"},
      {
        "id": "ruleset_3",
        "enabled": false,
        "path": "src/rules_3.json"},
      {
        "id": "ruleset_4",
        "enabled": false,
        "path": "src/rules_4.json"},
      {
        "id": "ruleset_5",
        "enabled": false,
        "path": "src/rules_5.json"}]
  }
}